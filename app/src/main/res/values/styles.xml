<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element transitions -->
    </style>


    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="PreferenceButtonStyle">
        <item name="android:background">@drawable/preference_selection_background</item>
        <item name="android:textColor">@color/preference_selection_text_color</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ActionBarSearchViewStyle">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="splashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextInputLayout" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="TextInput" parent="android:TextAppearance">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>
</resources>

