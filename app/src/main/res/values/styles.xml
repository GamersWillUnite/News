<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="PreferenceButtonStyle">
        <item name="android:background">@drawable/preference_selection_background</item>
        <item name="android:textColor">@color/preference_selection_text_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ActionBarSearchViewStyle">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="splashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextInputLayout" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="TextInput" parent="android:TextAppearance">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="InvisibleNewsLabel">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="ActionBarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="DetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
<!--        <item name="android:fontFamily">@font/ubuntu_r</item>-->
<!--        <item name="android:textColor">#000000</item>-->
    </style>
</resources>

